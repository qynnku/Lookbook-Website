DATABASE_URL="file:./dev.db"
JWT_SECRET="bonjour-secret"
PORT=4000
PUBLIC_BASE_URL="http://localhost:4000"

# Storage driver: 'local' (default) or 'cloudinary'
STORAGE_DRIVER=local

# Cloudinary (free tier available) - required if STORAGE_DRIVER=cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=lookbook
# Email configuration for OTP verification on signup
# Option 1: Gmail (recommended for testing)
SMTP_SERVICE=gmail
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Option 2: Custom SMTP server
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password