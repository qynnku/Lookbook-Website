// Prisma schema for Lookbook backend

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  password String
  role  String @default("user")
  verified Boolean @default(false)
  otpCode String?
  otpExpiry DateTime?
  brand Brand? @relation(fields: [brandId], references: [id])
  brandId Int?
  createdAt DateTime @default(now())
}

model Brand {
  id        Int      @id @default(autoincrement())
  name      String
  avatarUrl String
  likes     Int
  followers Int
  users     User[]
  metrics   MetricSnapshot[]
  tasks     WeeklyTask[]
  channels  ChannelConnection[]
  posts     Post[]
  lookbooks Lookbook[]
  platformStats PlatformStat[]
  followerSnapshots FollowerSnapshot[]
  orders    Order[]
}

model MetricSnapshot {
  id                  Int      @id @default(autoincrement())
  brandId             Int
  date                DateTime
  newReach            Int
  postViews           Int
  pageVisits          Int
  contentScore        Int
  changeVsYesterday   Float
  brand               Brand    @relation(fields: [brandId], references: [id])
}

model WeeklyTask {
  id        Int    @id @default(autoincrement())
  brandId   Int
  title     String
  channel   String
  completed Boolean
  brand     Brand  @relation(fields: [brandId], references: [id])
}

model ChannelConnection {
  id      Int    @id @default(autoincrement())
  brandId Int
  type    String
  status  String
  brand   Brand  @relation(fields: [brandId], references: [id])
}

model Post {
  id         Int      @id @default(autoincrement())
  brandId    Int
  title      String
  content    String
  status     String
  tags       String?
  media      String?
  platforms  String?
  scheduledAt DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  brand      Brand    @relation(fields: [brandId], references: [id])
}

model Lookbook {
  id          Int      @id @default(autoincrement())
  brandId     Int
  name        String
  description String?
  link        String?
  imageUrl    String?
  bannerUrl   String?
  imagesUrl   String?  // Comma-separated URLs for gallery images
  // Statistics
  totalViewers    Int      @default(0)
  facebookViews   Int      @default(0)
  threadViews     Int      @default(0)
  instagramViews  Int      @default(0)
  newCustomerReach Int     @default(0)
  postViews       Int      @default(0)
  pageVisits      Int      @default(0)
  contentScore    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  brand       Brand    @relation(fields: [brandId], references: [id])
}

model Order {
  id         Int      @id @default(autoincrement())
  brandId    Int
  code       String   @unique
  customer   String
  product    String
  channel    String
  status     String
  total      Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  brand      Brand    @relation(fields: [brandId], references: [id])

  @@index([brandId, status])
  @@index([brandId, createdAt])
}

// Daily per-platform metrics to power Statistics charts
model PlatformStat {
  id        Int      @id @default(autoincrement())
  brandId   Int
  platform  String   // facebook | instagram | threads | tiktok | youtube
  date      DateTime
  views     Int      @default(0)
  likes     Int      @default(0)
  comments  Int      @default(0)
  shares    Int      @default(0)
  follows   Int      @default(0)
  engagement Int     @default(0)
  reach     Int      @default(0)
  brand     Brand    @relation(fields: [brandId], references: [id])

  @@index([brandId, platform, date])
}

// Monthly follower snapshots per platform
model FollowerSnapshot {
  id        Int      @id @default(autoincrement())
  brandId   Int
  platform  String
  date      DateTime
  followers Int
  brand     Brand    @relation(fields: [brandId], references: [id])

  @@index([brandId, platform, date])
}
